# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# RESTful resources
#TODO GET     /login                                 controllers.Login.index
GET     /login/new                              controllers.Login.form
POST    /login                                  controllers.Login.create
DELETE  /login                                  controllers.Login.destroy

GET     /user                                   controllers.User.index
GET     /user/new                               controllers.User.form
POST    /user                                   controllers.User.create
#TODO DELETE  /user/{id}                              controllers.User.destroy
GET     /user/{id}                              controllers.User.show

GET     /user/index.{<html|json|xml>format}     controllers.User.index
GET     /user/{id}.{<html|json|xml>format}      controllers.User.show
GET     /resource/index.{<html|json|xml>format} controllers.Resource.index
POST    /resource.{<html|json>format}           controllers.Resource.create
GET     /resource/new                           controllers.Resource.form

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /images/                                staticDir:public/images

*       {controller}/{action
